<?xml version="1.0"?>
<odoo>
	<record id="reporte_queja_form_view_inherit" model="ir.ui.view">
		<field name="name">reporte.queja.form.view.inherited</field>
		<field name="model">reporte.queja</field>
		<field name="inherit_id" ref="call_center.reporte_queja_form_view"/>
		<field name="arch" type="xml">
            <xpath expr="//field[@name='descripcion']" position="after">
                <field name="tomado"/>
            </xpath>
		</field>
	</record>
        <record id="legal_m_queja_form_view" model="ir.ui.view">
                <field name="name">legal_m.queja.form.view</field>
                <field name="model">reporte.queja</field>
                <field name="arch" type="xml">
                        <form string="Form Queja">
                                <sheet>
                                        <group>
                                                <field name="id"></field>
                                                <field name="nombres"></field>
                                                <field name="direccion"></field>
                                        </group>
                                </sheet>
                        </form>
                </field>
        </record>

        <record id="legal_m_queja_tree_view" model="ir.ui.view">
                <field name="name">legal_m.queja.tree.view</field>
                <field name="model">reporte.queja</field>
                <field name="arch" type="xml">
                        <tree string="Tree Queja">
                                <field name="nombres"></field>
                                <field name="email"></field>
                        </tree>
                </field>
        </record>

        <act_window id="action_legal_queja"
                name="Modulo Call Center"
                res_model="reporte.queja"
                view_mode="tree,form"
                />

        <menuitem id="legal_menu_root" name="Legal" sequence="1"></menuitem>
        <menuitem id="legal_queja_menu_category" name="Revision" sequence="1" parent="legal_menu_root"></menuitem>
        <menuitem id="action_legal_queja" name="Quejas" sequence="1" parent="legal_queja_menu_category" action="action_legal_queja"></menuitem>

</odoo>
